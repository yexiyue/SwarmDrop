{
  "identifier": "mobile-capability",
  "platforms": [
    "android"
  ],
  "windows": [
    "main"
  ],
  "permissions": [
    "android-fs:allow-show-open-file-picker",
    "android-fs:allow-copy-file",
    "android-fs:allow-create-new-public-file",
    "android-fs:allow-show-view-file-dialog",
    "android-fs:allow-show-open-dir-picker",
    "android-fs:allow-get-fs-path",
    "android-fs:allow-get-metadata",
    "android-fs:allow-read-dir",
    "android-fs:allow-get-name",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "**"
        }
      ]
    }
  ]
}