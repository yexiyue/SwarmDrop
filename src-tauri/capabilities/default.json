{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "android-fs:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "stronghold:default",
    "fs:allow-exists",
    "fs:allow-remove",
    "fs:allow-app-read",
    "fs:allow-app-write",
    "biometry:default",
    "os:default",
    "os:allow-hostname",
    "store:default",
    "notification:default",
    "updater:default",
    "process:allow-restart",
    "dialog:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://api.upgrade.toolsetlink.com/*"
        }
      ]
    }
  ]
}