{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "swarmdrop",
  "version": "0.2.14",
  "identifier": "com.yexiyue.swarmdrop",
  "build": {
    "beforeDevCommand": "pnpm dev --host",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "swarmdrop",
        "width": 800,
        "height": 600,
        "minWidth": 360,
        "minHeight": 480
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFDOUYzRTBFNjBEMjBDNEEKUldSS0ROSmdEajZmSEhVa2N5cUFWRXRoMzQ2eUQwK0IvTVFrdXNkSmpoaEVJYUNzUEpkM2xaejAK",
      "endpoints": [
        "https://api.upgrade.toolsetlink.com/v1/tauri/upgrade?tauriKey=LeRhLvlkcdd1FX0etgOJaw&versionName={{current_version}}&target={{target}}&arch={{arch}}",
        "https://github.com/yexiyue/SwarmDrop/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
